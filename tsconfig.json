{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist",
      "lib": [
        "es6"
      ]
    },
    "exclude": [
        "node_modules/",
        "spec/",
        "**/*.spec.js",
        "**/*.spec.ts",
        "dist/"
    ]
  }
